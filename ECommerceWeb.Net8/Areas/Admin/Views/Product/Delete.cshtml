@model Product

<form method="post">
    <input asp-for="Id" hidden />
     
    <div class="card-header bg-primary bg-gradient py-3 my-3">
        <div class="col-12">
            <h2 class="text-white text-center py-3"> Delete Product </h2>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Title">    </label>
        <input asp-for="Title" disabled class="form-control">
  
    </div>
    <div class="mb-3">
        <label asp-for="Description">      </label>
        <input asp-for="Description" disabled class="form-control">
    
    </div>
    <div class="mb-3">
        <label asp-for="Author">    </label>
        <input asp-for="Author" disabled class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="ISBN">    </label>
        <input asp-for="ISBN" disabled class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="ListPrice">    </label>
        <input asp-for="ListPrice" disabled class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price">    </label>
        <input asp-for="Price" disabled class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price50">    </label>
        <input asp-for="Price50" disabled class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price100">    </label>
        <input asp-for="Price100" disabled class="form-control">
    </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control"> Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary  form-control"> Back To list</a>
            </div>
        </div>
    </div>

</form>

