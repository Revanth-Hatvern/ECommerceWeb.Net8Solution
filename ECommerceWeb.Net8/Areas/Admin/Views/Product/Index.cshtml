@model List<Product>


<div class="container">
    <div class="card-header bg-primary bg-gradient py-3 my-3">
        <div class="col-12">
            <h2 class="text-white text-center py-3"> Product List</h2>
        </div>
    </div>
   
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary ">
     
            </h2>
        </div>
            <div class="col-6 text-end pb-2">           
                   <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary" >
                   <i class="bi bi-bag-plus-fill"></i> Add new Product 
                   </a>
          
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="text-center text-primary">
            Title
        </th>
      
                <th class="text-center text-primary">
                    ISBN
                </th>
                <th>
                    Price
                </th>
                <th>
                    Author
                </th>

                <th>Category</th>
          

        <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
        
             <td>
                @obj.ISBN
            </td>
                    <td>
                        @obj.Price
                    </td>
             <td>
                @obj.Author
            </td>
            <td>@obj.Category.Name</td>
                 
            <td>
                <div class="w-75 btn-group" role="group">
                <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil-square"></i>Edit
                </a>
                 <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>