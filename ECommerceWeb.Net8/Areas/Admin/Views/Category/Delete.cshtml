@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="card-header bg-primary bg-gradient py-3 my-3">
        <div class="row pb-2">
            <h2 class="text-white  text-center">  Delete Category  </h2>
    
        </div>
    </div>
    <div class="border p-3 mt-4">
        
        <div class="mb-3">
            <label asp-for="Name">    </label>
            <input asp-for="Name" disabled class="form-control">
      
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">      </label>
            <input asp-for="DisplayOrder" disabled class="form-control">
    
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control"> Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary  form-control"> Back To list</a>
            </div>
        </div>
    </div>

</form>

